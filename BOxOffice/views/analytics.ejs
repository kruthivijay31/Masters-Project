                        var myChart = new dimple.chart(svg, data);
                        myChart.setBounds(20, 20, 360, 360)
                        myChart.addMeasureAxis("p", "love");
                        var ring = myChart.addSeries("Owner", dimple.plot.pie);
                          ring.innerRadius = "50%";
                          myChart.addLegend(500, 20, 90, 300, "left");
                          myChart.draw();
                    }*/
                });
        </script>
